{
  "typescript.preferences.quoteStyle": "single",
  "typescript.suggest.autoImports": true,
  "javascript.validate.enable": true,
  "tailwindCSS.jsLanguages": [
    "javascript",
    "javascriptreact",
    "reason",
    "rescript",
    "typescriptreact",
    "html.handlebars",
    "htmldjango",
    "clojure"
  ],
  "coc.preferences.formatOnSaveFiletypes": [
    "dart",
    "html.handlebars",
    "html",
    "graphql",
    "reason",
    "rescript",
    "rust",
    "typescript",
    "css",
    "scss",
    "markdown",
    "javascript",
    "json",
    "typescriptreact",
    "javascriptreact",
    "eruby",
    "clojure"
  ],
  "codeLens.separator": "ðŸ•¶",
  "codeLens.enable": true,
  "prettier.eslintIntegration": true,
  "prettier.stylelineIntegration": true,
  "scss.validate": true,
  "languageserver": {
    "rescript": {
      "enable": true,
      "module": "~/.vim/plugged/vim-rescript/server/out/server.js",
      "args": ["--node-ipc"],
      "filetypes": ["rescript"],
      "rootPatterns": ["bsconfig.json"]
    },
    "clojure-lsp": {
      "command": "bash",
      "args": ["-c", "/usr/local/bin/clojure-lsp"],
      "filetypes": ["clojure"],
      "trace.server": "verbose",
      "initializationOptions": {
        "ignore-classpath-directories": true
      }
    }
  },
  "snippets.ultisnips.directories": ["~/.dotfiles/snippets"]
}
