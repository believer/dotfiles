# Aliases
# https://codeburst.io/7-super-useful-aliases-to-make-your-development-life-easier-fef1ee7f9b73
alias ni='npm install'
alias nr='npm run '
alias nrs='npm run start'
alias nrd='npm run dev'
alias nrt='npm run test'
alias nis='npm install --save '
alias nisd='npm install --save-dev '
alias nout='npm outdated'
alias nchecku='npx npm-check -u'
alias mkcd='foo(){ mkdir -p "$1"; cd "$1" }; foo '
alias c='nvim'
alias l='ls -1a'
alias ll='l'
alias flush-npm='rm -rf node_modules && npm i'
alias tmux='tmux -2'
alias f='fzf | xargs bat'

# Git
alias git=hub
alias g='git'
alias gc='git commit'
alias gp='git push'
alias ga='git add'
alias gss='git status --short'
alias gck='git checkout $1'
alias gckf='gck feature/$1'
alias gckb='gck bugfix/$1'

# Docker
alias dps='docker ps --format "table {{.ID}}\t{{.Names}}\t{{.Image}}\t{{.Ports}}"'
alias ds='clear && docker service ps --format "table {{.Name}}\t{{.Image}}\t{{.CurrentState}}"'

# Dotfiles
alias vimrc='nvim ~/.dotfiles/.vimrc'
alias zshrc='nvim ~/.dotfiles/.zshrc'
alias zshaliases='nvim ~/.dotfiles/aliases'
alias zshdocker='nvim ~/.dotfiles/docker'
alias szsh='source ~/.dotfiles/.zshrc'

# Folders
alias af='cd ~/code/af'
alias vimla='cd ~/code/vimla'
alias dotfiles='cd ~/.dotfiles'
alias wid='cd ~/Dropbox/Dokument/what-i-did && nvim'

# Rarely/never used
alias myip='curl http://ipecho.net/plain; echo'
alias gac='git add . && git commit -a -m '
alias hs='history | grep'
